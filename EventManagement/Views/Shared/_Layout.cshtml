<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Zarządzanie wydarzeniami</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Zarządzanie wydarzeniami", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        
                                @Html.ActionLink("Edytuj swoje dane", "Edit", "Users",null, null);
                            
                </li>
                <!--<li>@Html.ActionLink("Informacje", "About", "Home")</li>
                       <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>-->
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>

<div class="row panel" style="margin: 10px; padding-left: 10px">
    <div id="categories" class="col-md-2">
        @Html.Partial("../Nav/Menu")
    </div>
    <div class="col-md-8">
        @RenderBody()
    </div>
</div>

<div class="container body-content">

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year — EventManagament</p>
    </footer>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
