@model IEnumerable<EventsManagement.Models.Event>

@{
    ViewBag.Title = "Lista wydarzeń";
}

<h2>Lista wydarzeń</h2>

<p>
    @Html.ActionLink("Stwórz nowe wydarzenie", "Create", "Events", null, new { @class = "btn btn-primary" })
</p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Autor")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.PelneNazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Zarządzaj uczestnikami", "AddIndex", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
